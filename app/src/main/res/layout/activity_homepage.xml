<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".homepage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:translationX="20dp"
                android:translationY="20dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:translationX="300dp"
                    app:srcCompat="@drawable/image0" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:translationX="10dp"
                    android:translationY="-25dp"
                    app:srcCompat="@drawable/menu_icon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="155dp"
                    android:layout_height="17dp"
                    android:text="Hello, Bukola Omoleye"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:translationX="100dp"
                    android:translationY="-40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:translationX="20dp"
                android:translationY="45dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Find Your Workout Classes"
                    android:textColor="#2B2B2B"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:background="@drawable/search_bar"


                android:drawableLeft="@drawable/search_icon"
                android:hint="Search"
                android:orientation="vertical"
                android:textAlignment="textStart"
                android:textStyle="italic"
                android:translationX="20dp"
                android:translationY="50dp">


            </androidx.appcompat.widget.AppCompatEditText>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:background="#DDF2FF"
                android:orientation="vertical"
                android:translationX="20dp"
                android:translationY="70dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="108dp"
                    android:layout_height="70dp"
                    android:text="Today's Activity"
                    android:textColor="#2B2B2B"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:translationX="20dp"
                    android:translationY="20dp" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="142dp"
                    android:layout_height="142dp"
                    android:translationX="196dp"
                    android:translationY="-60dp"
                    app:srcCompat="@drawable/jog" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="134dp"
                    android:layout_height="20dp"
                    android:text="8.00 AM-1.30 PM"
                    android:textColor="#B0B0B0"
                    android:textSize="15sp"
                    android:translationX="10dp"
                    android:translationY="-100dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="209dp"
                android:layout_height="22dp"
                android:text="Recommendation class"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="33dp"
                android:translationY="80dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:text="See all"
                android:textColor="#12BEF6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:translationX="310dp"
                android:translationY="60dp" />

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="80dp"
                android:background="@drawable/caegorycard_yoga"
                android:orientation="vertical"
                android:translationX="20dp"
                android:translationY="70dp">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="101dp"
                    android:layout_height="68dp"
                    app:srcCompat="@drawable/ayoga" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="87dp"
                    android:layout_height="19dp"
                    android:text="Yoga class"
                    android:textColor="#003A4D"
                    android:textSize="16sp"
                    android:translationX="120dp"
                    android:translationY="-55dp" />

                <ImageView
                    android:id="@+id/imageView36"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:translationX="328dp"
                    android:translationY="-70dp"
                    app:srcCompat="@mipmap/like_icon_background" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="136dp"
                    android:layout_height="16dp"
                    android:text="With Rachael Wisdom"
                    android:textColor="#004D66"
                    android:textSize="13sp"
                    android:translationX="120dp"
                    android:translationY="-80dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView11"
                android:layout_width="102dp"
                android:layout_height="22dp"
                android:text="Categories"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationX="20dp"
                android:translationY="80dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:text="See all"
                android:textColor="#12BEF6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:translationX="310dp"
                android:translationY="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:translationY="73dp">

                <ImageView
                    android:id="@+id/imageView37"
                    android:layout_width="142dp"
                    android:layout_height="236dp"
                    app:srcCompat="@drawable/warmup" />
                <ImageView
                    android:id="@+id/imageView35"
                    android:layout_width="142dp"
                    android:layout_height="236dp"
                    android:translationX="153dp"
                    android:translationY="-235dp"
                    app:srcCompat="@drawable/categpryyoga" />

                <ImageView
                    android:id="@+id/imageView57"
                    android:layout_width="142dp"
                    android:layout_height="236dp"
                    android:translationX="280dp"
                    android:translationY="-470dp"
                    app:srcCompat="@drawable/squat" />


            </LinearLayout>




        </LinearLayout>


    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="414dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:translationY="625dp"
        android:id="@+id/navi1">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:translationX="40dp"
            android:translationY="13dp"
            app:srcCompat="@drawable/home_icon"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ecercise_icon"
            android:translationX="120dp"
            android:translationY="13dp"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:translationY="13dp"
            android:translationX="200dp"
            app:srcCompat="@drawable/people_icon" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/settings_icon"
            android:translationY="13dp"
            android:translationX="300dp"/>
    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>